<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/albumImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#687C7C7C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album" />

    <TextView
        android:id="@+id/nameTrackTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:singleLine="true"
        android:text="Money"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/notFavoriteImageView"
        app:layout_constraintStart_toEndOf="@+id/albumImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instasosalka"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/nameTrackTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTrackTextView" />

    <ImageView
        android:id="@+id/downloadImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_download" />

    <ImageView
        android:id="@+id/notFavoriteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/downloadImageView"
        app:layout_constraintEnd_toStartOf="@+id/downloadImageView"
        app:layout_constraintTop_toTopOf="@+id/downloadImageView"
        app:srcCompat="@drawable/ic_not_favorite" />
</androidx.constraintlayout.widget.ConstraintLayout>